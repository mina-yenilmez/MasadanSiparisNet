@model List<TableViewModel>
    
<style>
   
    #isAvaible-True {
        background-color: #39902f;
    }

        #isAvaible-True button {
            cursor: pointer;
        }

    #isAvaible-False {
        background-color: #be2a2a;
        color: currentColor;
        cursor: not-allowed;
        opacity: 0.8;
        text-decoration: none;
    }

        #isAvaible-False button {
            cursor: not-allowed;
            margin-left: auto;
            margin-right: auto;
        }

    #grid {
        display: grid;
        grid-template-columns: auto auto auto;
        padding: 10px;
    }

    .card {
        padding: 5px;
        margin: 20px;
        box-shadow: 0 5px 10px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
    }

        .card:hover {
            box-shadow: 0 10px 20px 0 rgba(0,0,0,0.4);
        }

        .card .card-header, .card-body {
            background-color: #ffffff;
        }

    .cardText {
        text-align: center;
    }
</style>

<div class="container" id="grid">

    @foreach (var item in Model)
    {
    <div class="card" id="isAvaible-@item.IsAvailable">
        <div class="card-header">
            <h5 class="cardText">
                @item.TableName
            </h5>
        </div>

        <div class="card-body">
            @if (item.IsAvailable)
            {<p class="cardText">Müsait</p> }
            else
            {<p class=" cardText">Dolu</p>}
        </div>
        @if (item.IsAvailable)
        {
            <div class="card-footer" id="@item.TableId*@item.TableName"><div style="text-align:center"><button class="btn btn-light sendButton"> Oturma İsteği Yolla</button></div></div>
        }
        else
        {
            <div class="card-footer" id="@item.TableId*@item.TableName"><div style="text-align:center"><button class="btn btn-light"> Oturma İsteği Yolla</button></div></div>
        }

    </div>
    }
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/Istek.js"></script>

